#Creating a new index called books
PUT books
{

  "mappings":{
    "_doc": {
      "properties": {
        "title" : { "type" : "text" },
        "author": {"type" : "text"},
        "isbn": {"type": "text"},
          }
        }
    }
}

#Adding documents to the index
POST /books/_doc/1
{
  "titlle": "Getting started with Elasticsearch",
  "author": "Tumelo",
  "isbn": "ISBN-13 987-6-54321-101-1"
}

POST /books/_doc/2
{
  "titlle": "Python for scientists",
  "author": "Oneile",
  "isbn": "ISBN-14 879-6-53412-201-2"
}

POST /books/_doc/3
{
  "titlle": "FastAPI guide",
  "author": "Mathapelo",
  "isbn": "ISBN-16 977-6-55421-102-5"
}

#Listing all the documents in the index books
GET books/_search

